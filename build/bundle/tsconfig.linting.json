{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    "jest.config.js",
    "create-fake-blog.ts"
  ],
  "exclude": ["node_modules"]
}
